@model BanDongHo.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="~/Home/Index">Home</a></li>
                <li class="active">Account</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--account-starts-->
<div class="account">
    <div class="container">
        <form method="post" action="~/dang-nhap">
            <div class="account-top heading">
                <h2>ACCOUNT</h2>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="account-main">
                <div class="col-md-6 account-left">
                    <h3>Existing User</h3>
                    <div>
                        <p style="color:#f00">
                            @ViewBag.MessageLogin
                        </p>
                    </div>
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger", @style = "color: red" })
                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger", @style = "color: red" })
                    <div class="account-bottom">
                        <input name="UserName" placeholder="Account" type="text" tabindex="5" required value="@Model.UserName">
                        <input name="PassWord" placeholder="Password" type="password" tabindex="6" required value="@Model.PassWord">
                        <br />
                        <input name="RememberMe" type="checkbox" tabindex="7" value="@Model.RememberMe">
                        <span style="font-family: 'Lato-Regular'; text-align: center; color: #666; font-weight: 500; font-size: 14px; margin-left: 5px">Remember Me?</span>
                        <div class="address">
                            <a class="forgot" href="#">Forgot Your Password?</a>
                            <input type="submit" value="Login">
                        </div>
                    </div>
                </div>
                <div class="col-md-6 account-right account-left">
                    <h3>New User? Create an Account</h3>
                    <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
                    <a href="~/dang-ky">Create an Account</a>
                </div>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</div>
<!--account-end-->
